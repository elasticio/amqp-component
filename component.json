{
  "title": "AMQP",
  "description": "Pub/Sub Component for async communication with queues and topics",
  "credentials": {
    "fields": {
      "amqpURI": {
        "label": "AMQP URI",
        "required": true,
        "viewClass": "TextFieldView",
        "placeholder": "amqp://foo:password@server.io"
      }
    }
  },
  "actions": {
    "publish": {
      "title": "Publish",
      "main": "./lib/actions/publish.js",
      "fields": {
        "topic": {
          "label": "Exchange",
          "viewClass": "TextFieldWithNoteView",
          "required": true,
          "placeholder": "up_to_200_symbols",
          "note": "This exchange will be created on start if not exists."
        }
      },
      "metadata": {
        "in": "./lib/schemas/publish.in.json"
      }
    }
  },
  "triggers": {
    "consume": {
      "title": "Consume",
      "main": "./lib/triggers/consume.js",
      "type": "polling",
      "fields": {
        "topic": {
          "label": "Exchange",
          "viewClass": "TextFieldWithNoteView",
          "required": true,
          "placeholder": "up_to_200_symbols",
          "note": "This exchange will be created on start if not exists."
        },
        "bindingKeys": {
          "label": "Binding Keys",
          "viewClass": "TextFieldWithNoteView",
          "required": false,
          "placeholder": "this.key,that.key",
          "note": "Optional. You can use <b>#</b> or <b>*</b> to wildcard, more info <a href=\"http://www.rabbitmq.com/tutorials/tutorial-five-javascript.html\">here</a>"
        }
      },
      "metadata": {
        "in": {},
        "out": "./lib/schemas/consume.out.json"
      }
    }
  }
}
